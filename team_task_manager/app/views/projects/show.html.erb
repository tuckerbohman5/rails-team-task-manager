<h1><%= @project.name %></h1>
<h3><%= @project.description %></h3>
<h3>Due Date: <%= @project.due_date %></h3>
<h4>Project Owner: <%= @project.user.name %></h4><br>

<% if !@project.comments.nil? %>
<h5>Comments:</h5>
  <% @project.comments.each do |comment| %>
  <p><%= comment.user.name %> Said: <%= comment.content %></p>
  <% end %>
<% end %>

<%= form_for @comment do |f| %>
<%= f.text_field :content, :placeholder => "New comment" %>
<%= f.hidden_field :project_id, value: @project.id %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.submit "Add comment" %>
<% end %>


<h5>Tasks:</h5>
<ul>
<% @project.tasks.each do |task| %>
  <li><%= task.description %></li>
<% end %>
</ul>


<%= button_to "Add Task", new_project_task_path(@project), method: 'get' %>

<%= button_to "Edit Project", edit_project_path(@project), method: 'get' %>
<%= button_to "Delete Project", "/projects/#{@project.id}", method: 'delete' %>