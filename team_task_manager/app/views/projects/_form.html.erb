
<%= form_for(@project) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :description %>
<%= f.text_area :description %><br>

<%= f.label "Due Date"%>
<%= f.date_field :due_date %><br>
  
  <ul>
    
    <%= f.fields_for :tasks do |task_form| %>
      
      <li>
        <%= task_form.label "Task" %>
        <%= task_form.text_field :description %>
        <%= task_form.label "User Assigned" %>
        <%= task_form.collection_select :user_id, @users, :id, :name %>
      </li>
        
   
    <% end %>
  </ul>

<%= f.submit %>
<% end %>
